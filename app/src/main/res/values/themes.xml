        <item name="android:navigationBarColor">@android:color/transparent</item> <!-- Or ?attr/colorSurface for a solid color -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item> <!-- Use true for light navigation bar icons -->


        <!-- Customize your theme here. -->
        <!-- Enable Material 3 dynamic colors (requires API 31+) -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item> <!-- Let Material3 handle dark theme -->

